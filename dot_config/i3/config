bindsym $mod+m                  mode "monitor"
mode "monitor" {
    bindsym n   exec xrandr --output DP-2 --rotate normal; mode "default"
    bindsym l   exec xrandr --output DP-2 --rotate left; mode "default"
    bindsym r   exec xrandr --output DP-2 --rotate right; mode "default"
}

