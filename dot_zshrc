function my_git_info() {
    local vcs_info=$(echo $vcs_info_msg_0_ | sed -re 's/.*\[(.*)\].*/\1/')
    echo "$ZSH_THEME_GIT_PROMPT_PREFIX$vcs_info$(parse_git_dirty)$ZSH_THEME_GIT_PROMPT_SUFFIX"
}

BULLETTRAIN_GIT_PROMPT_CMD="\$(my_git_info)"
